# =========================
# Core app (staging)
# =========================
NODE_ENV=production
NEXTAUTH_URL=https://staging.school.example.com
NEXT_PUBLIC_APP_URL=https://staging.school.example.com
NEXTAUTH_SECRET=replace-with-strong-random-secret-for-staging

# Optional: error tracking (can reuse or disable)
SENTRY_DSN=your-sentry-dsn-or-empty

# =========================
# Database (staging)
# =========================
DATABASE_URL=postgresql://staging_user:staging_password@staging-host:5432/staging_db?sslmode=require

# =========================
# Default school bootstrap
# =========================
DEFAULT_SCHOOL_NAME="My School (Staging)"
DEFAULT_SCHOOL_CODE="MAIN-STG"
DEFAULT_SUPER_ADMIN_USER_ID=""

# =========================
# M-Pesa (Daraja / STK push - SANDBOX)
# =========================

# Use Safaricom sandbox endpoints
MPESA_ENV=sandbox

# Daraja sandbox app credentials
MPESA_CONSUMER_KEY=sandbox-consumer-key-from-daraja
MPESA_CONSUMER_SECRET=sandbox-consumer-secret-from-daraja

# STK Push config for sandbox
# If you use Safaricom's default sandbox paybill, this is often 174379;
# otherwise set to whatever shortcode your sandbox app is provisioned against.
MPESA_SHORTCODE=174379
MPESA_PASSKEY=sandbox-stk-passkey-for-that-shortcode

# Must match the sandbox callback URL configured in Daraja
MPESA_CALLBACK_URL=https://staging.school.example.com/api/mpesa/callback

# =========================
# SMS (Africa's Talking - staging)
# =========================
AFRICASTALKING_USERNAME=staging-africas-talking-username
AFRICASTALKING_API_KEY=staging-africas-talking-api-key
AFRICASTALKING_FROM=StagingSchool